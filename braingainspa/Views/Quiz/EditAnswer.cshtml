@model braingainspa.Models.AnswerViewModels

@{
    ViewBag.Title = "EditAnswer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <fieldset>
                <legend>Edit Topic</legend>

                @using (Html.BeginForm("EditAnswer", "Quiz", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <p style="color:blue; font-style:italic;">@Html.ViewBag.Msg</p>
                        <p style="color:red; font-style:italic;">@Html.ViewBag.Err</p>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.AnswerID)

                        <div class="form-group">
                            @Html.LabelFor(model => model.QuestionID, "Question", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.DropDownList("QuestionID", new SelectList(ViewBag.QuestionList, "QuestionID", "QuestionString"), "--Select Question--", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.QuestionID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.OptionLetter, "Option Letter", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.OptionLetter, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.OptionLetter, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AnswerString, "Answer String", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.AnswerString, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AnswerString, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IsCorrect, "Is Correct", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsCorrect)
                                    @Html.ValidationMessageFor(model => model.IsCorrect, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <button value="Submit" class="btn btn-primary btn-md pull-right">  Update  </button>
                            </div>
                        </div>
                    </div>
                }

                <div>
                    <strong>@Html.ActionLink("Return to List", "Answers")</strong>
                </div>
            </fieldset>
        </div>
        <div class="col-md-3">

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
