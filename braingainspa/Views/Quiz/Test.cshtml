        <main class="page-content pt-2">
            <div id="overlay" class="overlay"></div>
            <div class="container-fluid p-5">
                <div class="row">
                    <div class="form-group col-md-4">
                        <div class="container py-3">
                            <div class="card">
                                <div class="row">
                                    @*<div class="col-md-4">
                                            <img src="~/Content/images/withdrawal_icon.png" width="100" height="50" />
                                        </div>*@
                                    <div class="col-md-8 px-3">
                                        <div class="card-block px-3 align-content-center color-success">
                                            @if (@TempData["Withdrawals"] != null)
                                            {
                                                <span style="color:green; font-weight:bold; font-size:x-large">₦@TempData["Withdrawals"]</span><br />
                                            }
                                            else
                                            {
                                                <span style="color:green;font-weight:bold; font-size:x-large">₦0.00</span><br />
                                            }
                                            <br /><p class="card-text"><strong>Withdrawals</strong></p>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="form-group col-md-4">
                        <div class="container py-3">
                            <div class="card">
                                <div class="row">
                                    @*<div class="col-md-4">
                                            <img src="~/Content/images/Earnings.jpg" width="100" height="50" />
                                        </div>*@
                                    <div class="col-md-8 px-3">
                                        <div class="card-block px-3 align-content-md-center">
                                            @if (@TempData["Earnings"] != null)
                                            {
                                                <span style="color:gold; font-weight:bold; font-size:x-large">₦@TempData["Earnings"]</span>
                                            }
                                            else
                                            {
                                                <span style="color:gold;font-weight:bold; font-size:x-large;">₦0.00</span>
                                            }
                                            <br /><p class="card-text"><strong>Earnings</strong></p>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <div class="container py-3">
                            <div class="card">
                                <div class="row">
                                    @*<div class="col-md-4">
                                            <img src="~/Content/images/ePurse.png" width="100" height="50" />
                                        </div>*@
                                    <div class="col-md-8 px-3">
                                        <div class="card-block px-3 align-content-md-center">
                                            @if (@TempData["Purse"] != null)
                                            {
                                                <span style="color:goldenrod;font-weight:bold; font-size:x-large">₦@TempData["Purse"]</span><br />
                                            }
                                            else
                                            {
                                                <span style="color:goldenrod;font-weight:bold; font-size:x-large">₦0.00</span><br />
                                            }
                                            <br /><p class="card-text"><strong>e-Purse</strong></p>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
                <hr />
                <div>
                    @if (bool.Parse(Session["Subscription"].ToString()) == false)
