@model braingainspa.Models.Faculty

<div class="row">
    <table class="table table-bordered table-responsive">
        <tr>
            <th>School</th>
            <th>Classes</th>
            <th>Resource Types</th>
            <th>Description</th>
            <th align="center">Actions</th>
        </tr>
        <tbody>
            @if (ViewBag.FacultyList != null)
            {
                foreach (var item in ViewBag.FacultyList)
                {
            <tr id="row_@item.FacultyID">
                <td>
                    <strong>@item.SchoolName</strong>
                </td>
                <td>
                    <strong>@item.FacultyName</strong>
                </td>
                <td>
                    <strong>@item.ResourceTypeName</strong>
                </td>
                <td>
                    @item.Description
                </td>
                <td align="center">
                    <a href="@Url.Action("EditFaculty", "Quiz", new { id = @item.FacultyID })" class="btn btn-success" data-toggle="tooltip" title="View Details"><i class="glyphicon glyphicon-eye-open"></i></a>
                    <a href="@Url.Action("DeleteFaculty","Quiz", new { id = @item.FacultyID })" onclick="return confirm('Are you sure that you want to Delete the specified item?')" class="btn btn-danger" data-toggle="tooltip" title="Delete Item"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
                    <tr></tr>
                }
            }
        </tbody>
    </table>
</div>




