@model IEnumerable<braingainspa.Models.ClientPaymentViewModel>
@{
    ViewBag.Title = "Payments";
    Layout = "~/Views/Shared/_LayoutSigned.cshtml";

    decimal _totalAmount = 0;
}

<div class="container">

    <div class="row">
        <div class="col-md-10">
            <fieldset>
                <legend>PAYMENTS</legend>
                <br />
                <table class="table table-bordered table-responsive">
                    <tr>
                        <th>Date</th>
                        <th>Mode Of Payment</th>
                        <th>Amount</th>
                        <th>Description</th>

                        @*<th text-align="center">Actions</th>*@
                    </tr>
                    <tbody>
                        @if (ViewBag.PaymentList != null)
                        {
                            foreach (var item in ViewBag.PaymentList)
                            {
                                <tr id="row_@item.ClientPaymentID">
                                    <td>
                                        <strong>@item.Created</strong>
                                    </td>
                                    <td>
                                        <strong>@item.PayMode</strong>
                                    </td>
                                    <td>
                                        <strong>@item.Amount</strong>
                                    </td>
                                    <td>
                                        <strong>@item.Description</strong>
                                    </td>
                                </tr>
                                
                                _totalAmount += item.Amount;
                            }

                            <tr>
                                <td> </td>
                                <td> </td>
                                <td class="text-right"><h4>Total:</h4></td>
                                <td class="text-left" style="color:blueviolet;"><h4><strong>₦@_totalAmount.ToString("#,##0.00")</strong></h4></td>
                            </tr>
                        }
                    </tbody>

                </table>

            </fieldset>
        </div>
        <div class="col-md-2">

        </div>
    </div>


</div>

