@model braingainspa.Models.MyCodesViewModel
@{
    ViewBag.Title = "My Codes";
    Layout = "~/Views/Shared/_LayoutSigned.cshtml";
}

<h2>My Codes</h2>

<div class="container">
    <fieldset>
        <legend>My Codes</legend>
        <div id="dvskl" class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-6">

                <div class="form-group">
                    <span>
                        @Html.Label("Referee Code", htmlAttributes: new { @class = "control-label col-md-4" })
                    </span>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.ReferreeCode, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                </div>

                <div class="form-group">
                    @Html.Label("Referral Code", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.ReferralCode, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                </div>

                <div class="form-group">

                    @Html.Label("Parent Code", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.ParentCode, new { htmlAttributes = new { @class = "form-control" } })

                    </div>

                </div>

            </div>


            }

        </div>
        <div class="col-md-3">

        </div>

    </fieldset>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

